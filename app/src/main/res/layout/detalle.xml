<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalle">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:padding="32dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nombreReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Departamento de Managua"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/CantDtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="ISO NI-MN"
            android:textAlignment="center"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/imageDpto"
            android:layout_width="match_parent"
            android:layout_height="247dp"
            app:srcCompat="@drawable/boaco"
            tools:srcCompat="@drawable/managua" />

        <TextView
            android:id="@+id/cabeceraTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:textSize="17dp"
            android:text="Cabecera" />

        <TextView
            android:id="@+id/densidadPoblTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:textSize="17dp"
            android:text="Densidad Poblacional" />

        <TextView
            android:id="@+id/areaTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:textSize="17dp"
            android:text="Area" />

        <TextView
            android:id="@+id/densidadTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:textSize="17dp"
            android:text="Densidad" />

        <TextView
            android:id="@+id/RegionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:textSize="17dp"
            android:text="Region" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>